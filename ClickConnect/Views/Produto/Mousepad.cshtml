@model IEnumerable<ClickConnect.Models.Mousepad>

@{
    ViewData["Title"] = "Mousepad";
}

<body>
    <h1>Mousepad</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Marca</th>
            <th>Cor</th>
            <th>Tamanho</th>
            <th>Tipo</th>
            <th>Preço</th>
            <th>Quantidade</th>
        </tr>
        @foreach (var mousepad in Model)
        {
        <tr>
            <td>@mousepad.Id</td>
            <td>@mousepad.Nome</td>
            <td>@mousepad.Marca</td>
            <td>@mousepad.Cor</td>
            <td>@mousepad.Tamanho</td>
            <td>@mousepad.Tipo</td>
            <td>@mousepad.Preco</td>
            <td>@mousepad.Quantidade</td>
        </tr>
    }
    </table>
</body>
