@model IEnumerable<ClickConnect.Models.Mouse>

@{
    ViewData["Title"] = "Mouse";
}


<body>
    <h1>Mouse</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Marca</th>
            <th>Cor</th>
            <th>Tamanho</th>
            <th>Sensor</th>
            <th>Preço</th>
            <th>Quantidade</th>
        </tr>
        @foreach (var mouse in Model)
        {
        <tr>
            <td>@mouse.Id</td>
            <td>@mouse.Nome</td>
            <td>@mouse.Marca</td>
            <td>@mouse.Cor</td>
            <td>@mouse.Tamanho</td>
            <td>@mouse.Sensor</td>
            <td>@mouse.Preco</td>
            <td>@mouse.Quantidade</td>
        </tr>
        }
    </table>
</body>

